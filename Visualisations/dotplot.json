{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "height": 250,
  "title": "Bullying over time in the biggest LGAs",
  "data": {
    "url": "https://raw.githubusercontent.com/cywng/FIT3179/main/Data/JoinedDataFiltered.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "LGA",
        "oneOf": [
          "WYNDHAM",
          "CASEY",
          "MONASH",
          "FRANKSTON",
          "HUME",
          "MELBOURNE",
          "BRIMBANK",
          "GREATER DANDENONG",
          "YARRA RANGES"
        ]
      }
    },
    {
      "filter": {
        "field": "Year",
        "oneOf": [
          2008,
          2016
        ]
      }
    }
  ],
  "encoding": {
    "y": {
      "field": "Portion Bullied",
      "type": "quantitative",
      "title": "Percent of students bullied"
    },
    "x": {
      "field": "LGA",
      "type": "nominal",
      "title": "Local Government Area",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false
      }
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "LGA",
          "type": "nominal"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "color": {
          "field": "Year",
          "type": "ordinal",
          "scale": {
            "domain": [
              2008,
              2016
            ]
          },
          "title": "Year"
        },
    "tooltip": [
      {
        "field": "LGA",
        "type": "nominal",
        "title": "Local Government Area"
      },
      {
        "field": "Portion Bullied",
        "type": "quantitative",
        "title": "Percent Bullied"
      },
      {
        "field": "Year",
        "type": "quantitative"
      }
    ],
        "size": {
          "value": 100
        },
        "opacity": {
          "value": 1
        }
      }
    }
  ]
}